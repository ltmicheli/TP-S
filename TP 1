/*
TP 1
Programa para calcular sumas
*/

#include <iostream>
using namespace std;

int main()
{
   int num1, num2;

    cout << "Ingrese el primer numero: \n";
    cin >> num1;
    cout << "Ingrese el segundo numero: \n";
    cin >> num2;

    cout << "\nLa suma es: " << num1 + num2 << '\n';


}
